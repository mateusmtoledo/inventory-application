extends layout

block content
  form(method="post")
    h2= title
    ul
      li
        label(for="category-name") Name:
        input(type="text", name="name", id="category-name", value=category ? category.name : '')
      li
        label(for="category-description") Description:
        input(type="text", name="description", id="category-description", value=category ? category.description : '')
    button Submit

  if errors
    ul
      for error in errors
        li= error.msg
