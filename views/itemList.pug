extends layout

block content
  h2= title
  div.options
    a(href="/items/create") Create Item
  table.item-list
    tr
      th Item
      th In stock
      th Price
    for item in items
      tr(onclick=`window.location="${item.url}";`)
        td.item-name
          img(src=item.image, alt=item.name)
          p= item.name
        td.number-in-stock(href=item.url)= item.numberInStock
        td.price(href=item.url)= item.price
  div.page-controls
    if(pageNumber > 1)
      a(href='/items?page=' + (pageNumber - 1)) Prev
    p= `(${pageNumber} of ${totalPages})`
    if(pageNumber < totalPages)
      a(href='/items?page=' + (pageNumber + 1)) Next
