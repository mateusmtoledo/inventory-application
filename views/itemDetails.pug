extends layout

block content
  div.centered-item
    img(src=item.image, alt=item.name)
    h2= item.name
  div.options
    a(href=(item.url + '/update')) Update Item
    a(href=(item.url + '/delete')) Delete Item
  p= `Price: ${item.price}`
  p= `Number in stock: ${item.numberInStock}`
  p Category: 
    a(href=item.category.url) #{item.category.name}
  h3 Description
  p= item.description
